<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h4>

      <ul>
      <% post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="col-sm-12">
      <%= f.text_field :title, class: "form-control", placeholder: 'Enter title here' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <%= f.text_field :subheading, class: "form-control", placeholder: 'Post Description (SEO)' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-6">
      <%= f.label :image, 'Featured image '%><br>
      <%= f.file_field :image %>
    </div>
    <div class="col-sm-6">
       <%= f.label :category_id, class: "control-label" %><br>
      <%= f.select(:category_id, LenticularCms::Category.all.collect {|c| [ c.name, c.id ] }, { include_blank: true }, class: 'form-control') %>
    </div>
  </div>
  <% if false %>
  <div class="form-group row">
    <div class="col-sm-6">
      <%= f.label :sidebar_id, class: 'control-label'%><br>
      <%= f.select(:sidebar_id, Sidebar.all.collect {|c| [ c.name, c.id ] }, { include_blank: true }, class: 'form-control') %>
    </div>
  </div>
  <% end %>
  <div class="form-group row">
    <div class="col-sm-12">
      <%= f.text_area :content, class: "form-control", rows: 25 %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
